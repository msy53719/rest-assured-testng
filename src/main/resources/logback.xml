<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="10" debug="false">
	<property name="log_home" value="logs" />
	<property name="app_name" value="rest-assured-testng" />

	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{yyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50}
				-%msg%n
			</Pattern>
		</layout>
	</appender>

	<appender name="rollFILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy
			class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${log_home}/${app_name}%d{yyyMMdd}debug.log
			</fileNamePattern>
			<maxHistory>7</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50}-%msg%n</pattern>
			<charset>UTF-8</charset>
		</encoder>
		<!-- <layout class="ch.qos.logback.classic.PatternLayout"> <Pattern> %d{yyy-MM-dd 
			HH:mm:ss.SSS} [%thread] %-5level %logger{50} -%msg%n </Pattern> </layout> -->
		<prudent>true</prudent>
	</appender>
	<logger name="ch.qos.logback.*" level="error" />

	<root level="debug">
		<!-- <appender-ref ref="STDOUT" /> -->
		<appender-ref ref="rollFILE" />
	</root>

</configuration>